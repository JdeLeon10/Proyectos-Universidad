@model WebInformacionDocenteJdL.Models.Contacto

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4> Eliminar contacto </h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.lStrNombres) @Html.DisplayTextFor(m => m.lStrApellidos)?
                </div>
                <form action="@Url.Action("Eliminar", "Contacto")" method="post">
                    <input type="hidden" class="form-control" name="lIntIdContacto" value="@Html.DisplayTextFor(m => m.lIntIdContacto)" />
                    <button type="submit" class="btn btn-danger"> Eliminar </button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Contacto")"> Volver </a>
                </form>
            </div>
        </div>
    </div>
</div>